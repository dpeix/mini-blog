{% extends 'base.html.twig' %}

{% block title %}Articles â€” Mini-Blog{% endblock %}

{% block body %}
    <section class="page-header">
        <h1>All Articles</h1>
    </section>

    <div class="articles-grid">
        {% for article in articles %}
            <article class="article-card">
                <h3><a href="{{ path('app_article_show', {slug: article.slug}) }}">{{ article.title }}</a></h3>
                <div class="article-meta">
                    <time datetime="{{ article.createdAt|date('Y-m-d') }}">{{ article.createdAt|date('d M Y') }}</time>
                    <span>by {{ article.users.username }}</span>
                </div>
                <p>{{ article.content|slice(0, 200) }}...</p>
                <span class="likes">&hearts; {{ article.likes }}</span>
            </article>
        {% else %}
            <p>No articles published yet.</p>
        {% endfor %}
    </div>
{% endblock %}
