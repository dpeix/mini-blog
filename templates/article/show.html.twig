{% extends 'base.html.twig' %}

{% block title %}{{ article.title }} â€” Mini-Blog{% endblock %}

{% block body %}
    <article class="article-full">
        <header class="article-header">
            <h1>{{ article.title }}</h1>
            <div class="article-meta">
                <span>{{ article.users.username }}</span>
                <div class="meta-dot"></div>
                <span>{{ article.createdAt|date('d M Y') }}</span>
            </div>
        </header>
        <div class="article-content">
            {{ article.content|nl2br }}
        </div>
        <footer class="article-footer">
            <button class="like-btn"
                    data-controller="like"
                    data-like-url-value="{{ path('app_article_like', {id: article.id}) }}"
                    data-action="click->like#like">
                <span class="like-icon">&hearts;</span>
                <span data-like-target="count">{{ article.likes }}</span>
            </button>
            <a href="{{ path('app_article_list') }}" class="btn btn-secondary">&larr; All articles</a>
        </footer>
    </article>
{% endblock %}
